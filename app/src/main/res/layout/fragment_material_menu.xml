                    <androidx.cardview.widget.CardView
                        android:id="@+id/CardBtnMaterialEletronics"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_column="1"
                        android:backgroundTint="#FDC043"
